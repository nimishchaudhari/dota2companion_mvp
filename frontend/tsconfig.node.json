{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "composite": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": [
    "vite.config.js",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js",
    "eslint.config.js",
    "scripts/**/*"
  ]
}